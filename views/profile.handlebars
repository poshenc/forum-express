<div class="row">
  <div class="card-body shadow d-flex">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}">
    </div>

    <div class="col-md-8">
      <h1>{{user.name}}</h1>
      <p>{{user.email}}</p>
      <p><strong>{{count}}</strong> 已評論餐廳</p>
      <p><strong>{{favRestaurantCounts}}</strong> 收藏的餐廳</p>
      <p><strong>{{followingCounts}}</strong> followings(追隨者)</p>
      <p><strong>{{followerCounts}}</strong> followers(追蹤者)</p>
      {{#if editable }}
      <a href='/users/{{user.id}}/edit'>
        <button type="button" class="btn btn-primary">Edit</button>
      </a>
      {{else}}

      {{#if isFollowed}}
      <form action="/following/{{user.id}}?_method=DELETE" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-danger">取消追蹤</button>
      </form>
      {{else}}
      <form action="/following/{{user.id}}" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-primary">追蹤</button>
      </form>
      {{/if}}

      {{/if}}
    </div>
  </div>
</div>


<div class="row mx-0 justify-content-between">
  <div class="card shadow mt-5" style="width: 30%;">
    <h6 class="card-header"><strong>{{followingCounts}}</strong> followings(追蹤者)</h6>
    <div class="card-body">
      {{#each user.Followings}}
      <a href="/users/{{this.id}}" style="display: inline-block;">
        <img src="{{this.image}}" class="profile-img">
      </a>
      {{/each}}
    </div>
  </div>

  <div class="card shadow mt-5" style="width: 65%;">
    <h6 class="card-header"><strong>{{count}}</strong> 已評論餐廳</h6>
    <div class="card-body">
      {{#each comments}}
      <a href="/restaurants/{{this.id}}" style="display: inline-block;">
        <img src="{{this.image}}" class="profile-img">
      </a>
      {{/each}}
    </div>
  </div>

</div>


<div class="row mx-0 justify-content-between">
  <div class="card shadow mt-5" style="width: 30%;">
    <h6 class="card-header"><strong>{{followerCounts}}</strong> followers(追隨者)</h6>
    <div class="card-body">
      {{#each user.Followers}}
      <a href="/users/{{this.id}}" style="display: inline-block;">
        <img src="{{this.image}}" class="profile-img">
      </a>
      {{/each}}
    </div>
  </div>

  <div class="card shadow mt-5" style="width: 65%;">
    <h6 class="card-header"><strong>{{favRestaurantCounts}}</strong> 收藏的餐廳</h6>
    <div class="card-body">
      {{#each user.FavoritedRestaurants}}
      <a href="/restaurants/{{this.id}}" style="display: inline-block;">
        <img src="{{this.image}}" class="profile-img">
      </a>
      {{/each}}
    </div>
  </div>
</div>