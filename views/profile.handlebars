<div class="row">
  <div class="card-body shadow d-flex">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}">
    </div>

    <div class="col-md-8">
      <h1>{{user.name}}</h1>
      <p>{{user.email}}</p>
      <p><strong>{{count}} 已評論餐廳</strong></p>
      {{#if editable }}
      <a href='/users/{{user.id}}/edit'>
        <button type="button" class="btn btn-primary">Edit</button>
      </a>
      {{/if}}
    </div>
  </div>
</div>

<div class="card shadow mt-5">
  <h6 class="card-header">{{count}} 已評論餐廳</h6>
  <div class="card-body">
    {{#each comments}}
    <a href="/restaurants/{{this.restaurantId}}">
      <img src="{{this.restaurantImage}}" class="commented-restaurants">
    </a>
    {{/each}}
  </div>
</div>